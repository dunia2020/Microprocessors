START:
	MVI A,10H
    	STA 0B00H	;rightmost
   	STA 0B01H
    	STA 0B02H
    	STA 0B03H
	STA 0B04H
	STA 0B05H	;left
	CALL KIND		;READ INPUT
	CPI 00H
	JC START
	CPI 10H
	JNC START
	MOV B,A
AGAIN1:
	CPI 06H		    ;COMPARE INPUT WITH 6
	JC NO_DEC1
	SUI 06H		    ;AND INPUT=INPUT-10
	JMP AGAIN1
NO_DEC1:
	CMA 		 ;THE REMAINING IS THE FIRST DIGIT,WE STORE IT
	STA 3000H	;FOR DISPLAY AND WE GO TO THE NEXT MEMORY CELL
	CMA

	MOV C,A	;timh upoloipou
	MVI A,05H
	MVI H,0BH
	SUB C		;A-C=5-C. 5->0, 4->1 klp
	MOV L,A	;L=A
	MOV M,B
	LXI D,0B00H
	CALL STDM
	CALL DCD
	JMP START

END
