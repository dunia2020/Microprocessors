START:
	CALL INIT
	LDA 2000H
	MOV B,A
	ANI E0H
	RLC
	RLC
	RLC
	MOV C,A	;C->y 3MSB
	MOV A,B
	ANI 07H
	MOV B,A	;B->x 3LSB

	ADD C
	MOV D,A	;D->SUM x+y
PRINT1:
	MOV A,B
	STA 0B05H	 
	MOV A,C
	STA 0B04H
	MOV A,D
	STA 0B00H
	CALL PRINT-7SEG

READ-KEYBOARD:
	CALL KIND
	CPI 83H
	JZ CHANGE
READ2:
	MOV B,A	;B->x 
	CALL KIND
	CPI 83H
	JZ CHANGE
	MOV C,A	;C->y 
	ADD B
	MOV D,A		;D->SUM x+y
бим-HEX:		 
	ANI 0FH		  
	MOV L,A	;4LSB->L  
	MOV A,D		  
	ANI F0H
	RRC
	RRC
	RRC
	RRC	
	MOV H,A	;4MSB->H
PRINT2:
	MOV A,B
	STA 0B05H	 
	MOV A,C
	STA 0B04H
	MOV A,L
	STA 0B00H
	MOV A,H
	STA 0B01H
	CALL PRINT-7SEG
	JMP READ-KEYBOARD

CHANGE:
	MOV A,B
	STA 0B01H	 
	MOV A,C
	STA 0B00H
	MOV A,H
	STA 0B05H
	MOV A,L
	STA 0B04H
	CALL PRINT-7SEG
	CALL KIND
	CPI 83H
	JZ PRINT2
	JMP READ2

PRINT-7SEG:		 ;PRINT SEG'S
	PUSH PSW
	PUSH B
	PUSH D
	PUSH H
	LXI D,0B00H
	CALL STDM
	CALL DCD
	POP H
	POP D
	POP B
	POP PSW
	RET
INIT:
	PUSH PSW
	MVI A,10H
	STA 0B00H
	STA 0B01H
	STA 0B02H
	STA 0B03H
	STA 0B04H
	STA 0B05H
	POP PSW
	CALL PRINT-7SEG
	RET

END:
	END	