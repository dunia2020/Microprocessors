;diavazei 2 arithmpus apo to pliktrologio. kai tous pros8etei. an exw overflow
;emfanizw to "H"

START:
	LXI D,0B10H
	MVI A,10H
	STA 0B10H
	STA 0B11H
	STA 0B12H
	STA 0B13H
	STA 0B14H
	STA 0B15H
	CALL STDM
	CALL DCD
	CALL READK
	CALL PRINT_NUM
	CALL READK_1
	CALL PRINT_NUM
	CALL PROSTHESI
	
READK:
	CALL KIND
	MOV B,A
	CPI 0AH
	CNC READK
	STA 0B15H
	RET
READK_1:
	CALL KIND
	MOV C,A
	CPI 0AH
	CNC READK_1
	STA 0B14H
	RET
PRINT_NUM:
	PUSH D
	LXI D,0B10H
	CALL STDM
	CALL DCD
	POP D
	RET

PROSTHESI:
	MOV A,B
	ADD C
	CPI 10H
	JC OK1
	MVI A,11H		;gia to overflow
	

OK1:
	STA 0B10H
	CALL PRINT_NUM
	JMP START
END