;MODULO 6 

START:
	LXI D,0B10H
	MVI A,10H
	STA 0B10H
	STA 0B11H
	STA 0B12H
	STA 0B13H
	STA 0B14H
	STA 0B15H
	CALL STDM
	CALL DCD
	CALL READK
	;CALL PRINT_NUM
	MOV A,B 
MODULUS:
	CPI 06H
	JC PRINTA
	SUI 06H
	JMP MODULUS
PRINTA:
	CMA
	STA 3000H
	CMA
	CPI 00H
	JZ MIDEN
	CPI 01H
	JZ ENA
	CPI 02H
	JZ DYO
	CPI 03H
	JZ TRIA
	CPI 04H
	JZ TESSERA
	CPI 05H
	JZ PENTE
		
READK:
	CALL KIND
	MOV B,A		;o b ton arithmo 
	RET
PRINT_NUM:
	PUSH D
	LXI D,0B10H
	
	CALL STDM
	CALL DCD
	POP D
	RET
MIDEN:
	MOV A,B
	STA 0B15H
	CALL PRINT_NUM 
	JMP START
ENA:
	MOV A,B
	STA 0B14H
	CALL PRINT_NUM 
	JMP START
DYO:
	MOV A,B
	STA 0B13H
	CALL PRINT_NUM 
	JMP START
TRIA:
	MOV A,B
	STA 0B12H
	CALL PRINT_NUM 
	JMP START
TESSERA:
	MOV A,B
	STA 0B11H
	CALL PRINT_NUM 
	JMP START
PENTE:
	MOV A,B
	STA 0B10H
	CALL PRINT_NUM 
	JMP START


END