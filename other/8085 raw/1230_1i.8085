;diavazei apo to pliktrologio kai emfanizei sta leds to antitheto
;px an diavasei 1 emfanizei 1111 1110 . an diavasei 5 1110 0000
START:
	MVI C,00H
	LXI D,0B10H
	MVI A,10H
	STA 0B10H
	STA 0B11H
	STA 0B12H
	STA 0B13H
	STA 0B14H
	STA 0B15H
	CALL STDM
	CALL DCD
	CALL READK
	CALL PRINT_NUM
	MOV A,B 		;O B EXEI TON ARITHMO 
	CPI 00H	
	JZ PRINTA
	CPI 08H
	JZ PRINT_1
	
LOOPA:
	MOV A,C
	ORI 01H
	MOV C,A
	DCR B
	MOV A,B
	CPI 00H
	JZ PRINTA
	MOV A,C
	RLC
	MOV C,A
	JMP LOOPA

READK:
	CALL KIND
	MOV B,A
	CPI 09H
	CNC READK
	STA 0B11H
	RET
PRINT_NUM:
	PUSH D
	LXI D,0B10H
	CALL STDM
	CALL DCD
	POP D
	RET
		
PRINT_1:
	MVI A,FFH
	
	STA 3000H
	JMP START
PRINTA:
	MOV A,C
	
	STA 3000H
	JMP START
		
		

END